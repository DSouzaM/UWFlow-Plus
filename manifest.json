{
  "manifest_version": 2,

  "name": "UWFlow+",
  "description": "Makes UWFlow easily accessible through ugradcalendar. Hover over courses for information, and right click to open the Flow page. This extension is not directly affiliated with UWFlow or its creators.",
  "version": "1.0",

  "page_action": {
    "default_icon": "res/icon-16.png"
  },
  "web_accessible_resources": ["res/loading.gif", "html/hoverwindow.html"],
  "content_scripts": [
  {
    "matches": ["http://ugradcalendar.uwaterloo.ca/*"],
    "css": ["styles/extension-styling.css"],
    "js": ["scripts/jquery-1.11.3.js","scripts/script.js","scripts/background.js"],
    "all_frames": true
  }
  ],
  "background": {
    "scripts":["scripts/background.js"]
  },
  "icons": {
    "16":"res/icon-16.png",
    "48":"res/icon-48.png",
    "128":"res/icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "cookies",
    "http://uwflow.com/",
    "https://uwflow.com/",
    "http://ugradcalendar.uwaterloo.ca/",
    "https://ugradcalendar.uwaterloo.ca/"
  ]  
}